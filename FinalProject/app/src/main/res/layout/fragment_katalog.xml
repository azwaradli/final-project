<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.azwar.finalproject.KatalogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="Masukkan nama atau kode barang"
                android:paddingLeft="8dp"
                android:textSize="14sp"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/hintText"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="0.2"
                android:layout_marginLeft="8dp"
                android:background="@drawable/orangeripple"
                android:text="cari"
                android:textSize="12sp"
                android:textStyle="bold"
                android:onClick="cari"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:text="Produk Terbaru"
                android:textAlignment="viewStart"
                android:textColor="@color/secondaryText"
                android:drawableLeft="@drawable/ic_gift"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:textAllCaps="false"
                android:background="@drawable/cardholderripple"
                android:onClick="kategori"
                android:tag="Produk Terbaru"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="2dp"
                android:drawableLeft="@drawable/ic_alatmasak"
                android:drawablePadding="12dp"
                android:padding="12dp"
                android:text="Peralatan Masak"
                android:textAlignment="viewStart"
                android:textColor="@color/secondaryText"
                android:background="@drawable/cardholderripple"
                android:textAllCaps="false"
                android:onClick="kategori"
                android:tag="Peralatan Masak"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
