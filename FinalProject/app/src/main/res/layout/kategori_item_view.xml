<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kategoriLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:padding="16dp"
    android:clickable="true"
    android:background="@drawable/cardholderripple"
    android:onClick="detailBarang">

    <ImageView
        android:id="@+id/kategoriGambar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/kategoriNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textSize="15sp"
            android:textColor="@color/primaryText"/>
        <TextView
            android:id="@+id/kategoriStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="Barang Tersedia"
            android:textColor="@color/colorPrimary"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:background="@color/softgrey"/>
        <TextView
            android:id="@+id/kategoriHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Rp 110.000"
            android:textSize="12sp"
            android:textColor="@color/secondaryText"/>
        <TextView
            android:id="@+id/kategoriCicilan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cicilan Rp 22.000/bulan"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
</LinearLayout>