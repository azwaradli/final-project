<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:padding="16dp"
    android:clickable="true"
    android:background="@drawable/cardholderripple"
    android:onClick="detailBarang">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/kategoriNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textColor="@color/primaryText"/>
        <TextView
            android:id="@+id/kategoriHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 110.000"
            android:textColor="@color/secondaryText"/>
        <TextView
            android:id="@+id/kategoriCicilan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cicilan Rp 22.000/bulan"
            android:textColor="@color/secondaryText"/>
    </LinearLayout>
</LinearLayout>